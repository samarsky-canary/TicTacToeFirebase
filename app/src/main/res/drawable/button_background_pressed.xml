<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
    android:state_pressed="true"
    >
        <shape
            android:shape="rectangle"
            >
            <solid android:color="@color/borderRedColor"/>
            <corners
                android:radius="15pt"
                />
            <stroke
                android:width="2dp"
                android:color="@color/borderRedColor"
                />
            <padding
                android:top="@dimen/button_padding"
                android:bottom="@dimen/button_padding"
                android:left="@dimen/button_padding"
                android:right="@dimen/button_padding"
                />
        </shape>
    </item>

    <item>
